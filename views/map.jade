extends layout

block content
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  meta(name='author', content='Benjamin Dietz')
  meta(name='author', content='Yannick Paulsen')
  // Leaflet & Leaflet.draw
  script(src='https://unpkg.com/leaflet@1.3.1/dist/leaflet.js', integrity='sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw==', crossorigin='')
  link(rel='stylesheet', href='https://unpkg.com/leaflet@1.3.1/dist/leaflet.css', integrity='sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ==', crossorigin='')
  script(src="https://unpkg.com/leaflet@1.2.0/dist/leaflet.js")
  script(src="/javascripts/leaflet-routing-machine.min.js")
  link(rel='stylesheet', href='stylesheets/style.css')
  h1= title
  .container
    .row
      .col-md-4
        p
          input#GeoJSONinput.formcontrol(name='name', placeholder='Name for drawn feature(s)', type='text')
          button#load.btn.btn-success(type='submit', onclick='saveToDatabase()') Save to Database
        p
          a#delete.btn.btn-danger(href='#') Clear feature in map
        br
        p
          input#addRoute.formcontrol(name='name', placeholder='Add RouteName', type='text')
          button#load.btn.btn-success(type='submit', onclick='loadAddRoute()') Load add route
        p
        p
          a.btn.btn-warning(href='/jsonlist') Show database objects
      .col-md-8
        #map
  script(src='javascripts/jsnlog.min.js')
  script(src='javascripts/map.js')
  script(src='javascripts/mongoDB.js')
